

  <h1>Enter your Information</h1>
<div class="clear"></div>
<div class="box col-xs-10 col-xs-offset-1">


<%= simple_form_for @form, url: forms_path(@form) do | f | %>
    <%= f.input :name, placeholder: 'Enter your First and Last Name' %>
    <%= f.input :email, placeholder: 'user@domain.com' %>
    <%= f.input :message, label: 'Enter a message' , placeholder: 'Any favorite sayings?' %>

    <%=  f.submit  'Submit' , class: 'btn btn-primary' %>

<% end %>
</div>

